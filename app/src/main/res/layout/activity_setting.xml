<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <TextView
        android:id="@+id/food_back_set"
        android:layout_width="356dp"
        android:layout_height="113dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/food_back_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shower_back_set"
        android:layout_width="356dp"
        android:layout_height="113dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/food_back_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_back_set" />

    <TextView
        android:id="@+id/hobby_back_set"
        android:layout_width="356dp"
        android:layout_height="113dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/food_back_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shower_back_set"
        app:layout_constraintVertical_bias="0.129" />

    <ImageButton
        android:id="@+id/food_num_pick"
        android:layout_width="105dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/food_back_set"
        app:layout_constraintEnd_toStartOf="@+id/food_set_num"
        app:layout_constraintStart_toStartOf="@+id/food_back_set"
        app:layout_constraintTop_toTopOf="@+id/food_back_set"
        app:srcCompat="@drawable/food_set1" />

    <TextView
        android:id="@+id/food_set_num"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="8dp"
        android:text="50"
        android:textColor="@color/cardview_dark_background"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/food_back_set"
        app:layout_constraintEnd_toEndOf="@+id/food_back_set"
        app:layout_constraintTop_toTopOf="@+id/food_back_set"
        app:layout_constraintVertical_bias="0.562" />

    <EditText
        android:id="@+id/shower_set_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="72dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="4"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:text="@string/shower_set_number"
        android:textColor="@color/cardview_dark_background"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/shower_back_set"
        app:layout_constraintEnd_toEndOf="@+id/shower_back_set"
        app:layout_constraintHorizontal_bias="0.936"
        app:layout_constraintStart_toStartOf="@+id/shower_back_set"
        app:layout_constraintTop_toTopOf="@+id/shower_back_set"
        app:layout_constraintVertical_bias="0.38" />

    <EditText
        android:id="@+id/hobby_set_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="4"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:text="@string/hobby_set_number"
        android:textColor="@color/cardview_dark_background"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/hobby_back_set"
        app:layout_constraintEnd_toEndOf="@+id/hobby_back_set"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="@+id/hobby_back_set"
        app:layout_constraintTop_toTopOf="@+id/hobby_back_set"
        app:layout_constraintVertical_bias="0.45" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hobby_back_set" />

</android.support.constraint.ConstraintLayout>